{
    "manifest_version": 3,
    "name": "Cookie Viewer",
    "description": "View and analyze cookies with detailed attributes in the side panel",
    "version": "1.0",
    "permissions": [
        "cookies",
        "activeTab",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}