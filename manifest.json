{
    "manifest_version": 3,
    "name": "Cookie Viewer",
    "version": "1.0",
    "description": "View cookie values of the current page.",
    "permissions": [
        "cookies",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}